{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "启动",
            "type": "node",
            "request": "launch",
            "internalConsoleOptions": "openOnSessionStart",
            "program": "${workspaceRoot}/digofile.js",
            "cwd": "${workspaceRoot}",
            "args": [
                "build",
                "${file}"
            ],
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/_build",
            "smartStep": true
        },
        {
            "name": "附加",
            "type": "node",
            "request": "attach",
            "port": 5858,
            "address": "localhost",
            "restart": false,
            "sourceMaps": false
        },
        {
            "name": "附加到进程",
            "type": "node",
            "request": "attach",
            "processId": "${command.PickProcess}",
            "port": 5858,
            "sourceMaps": false
        }
    ]
}